.row.col-md-4
  = form_tag session_path, class: 'form' do
    .form-group
      = label_tag :login, 'Login'
      = email_field_tag :login, nil, class: 'form-control'

    .form-group
      = label_tag :password, 'Password'
      = password_field_tag :password, nil, class: 'form-control'
    %input.btn.btn-default{type: 'submit', value: 'Enter'}
