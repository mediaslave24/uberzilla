%table.table{'ng-init' => 'loadTickets()'}
  %thead
    %tr
      %th #
      %th Subject
      %th Customer Email
      %th Customer Name
      %th Assignee
      %td Department
      %td Status
      %td Actions
  %tbody
    %tr{'ng-repeat' => 't in tickets'}
      %td {{ $index }}
      %td
        %a{href: '#/ticket/{{t.uid}}'}{{ t.subject }}
      %td {{ t.customer_email }}
      %td {{ t.customer_name }}
      %td {{ t.staff_name }}
      %td {{ t.department_name }}
      %td {{ t.status_name }}
      %td
        %a{href: 'javascript:void(0);', 'ng-click' => 'destroy(t)'} Destroy
